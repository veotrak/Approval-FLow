<?xml version="1.0" encoding="UTF-8"?>
<savedsearch scriptid="customsearch_p2p_approvals_by_month">
  <title>P2P Approvals by Month</title>
  <recordtype>customrecord_p2p_approval_history</recordtype>
  <filters>
    <filter field="custrecord_p2p_ah_timestamp" operator="within" values="last12months"/>
  </filters>
  <columns>
    <column field="custrecord_p2p_ah_timestamp" summary="GROUP"/>
    <column field="custrecord_p2p_ah_approver" summary="GROUP"/>
    <column field="formulanumeric" summary="SUM">
      <formula>CASE WHEN {custrecord_p2p_ah_action} = 1 THEN 1 ELSE 0 END</formula>
    </column>
    <column field="formulanumeric" summary="SUM">
      <formula>CASE WHEN {custrecord_p2p_ah_action} = 2 THEN 1 ELSE 0 END</formula>
    </column>
  </columns>
</savedsearch>
