<?xml version="1.0" encoding="UTF-8"?>
<restlet scriptid="customscript_p2p_ai_integration_rl">
  <name>P2P AI Integration RESTlet</name>
  <scriptfile>SuiteScripts/p2p_approvals/restlet/p2p_ai_integration_rl.js</scriptfile>
  <scriptcustomfields>
    <scriptcustomfield scriptid="custscript_p2p_allowed_roles">
      <label>Allowed Roles</label>
      <fieldtype>TEXT</fieldtype>
      <defaultvalue>3</defaultvalue>
    </scriptcustomfield>
    <scriptcustomfield scriptid="custscript_p2p_teams_webhook">
      <label>Teams Webhook URL</label>
      <fieldtype>TEXTAREA</fieldtype>
    </scriptcustomfield>
    <scriptcustomfield scriptid="custscript_p2p_slack_webhook">
      <label>Slack Webhook URL</label>
      <fieldtype>TEXTAREA</fieldtype>
    </scriptcustomfield>
    <scriptcustomfield scriptid="custscript_p2p_auto_approve_threshold">
      <label>Auto-Approve Risk Score Threshold</label>
      <fieldtype>DECIMALNUMBER</fieldtype>
    </scriptcustomfield>
    <scriptcustomfield scriptid="custscript_p2p_new_vendor_days">
      <label>New Vendor Days</label>
      <fieldtype>INTEGER</fieldtype>
    </scriptcustomfield>
    <scriptcustomfield scriptid="custscript_p2p_min_vendor_bills_account_anom">
      <label>Min Vendor Bills for Account Anomaly</label>
      <fieldtype>INTEGER</fieldtype>
    </scriptcustomfield>
  </scriptcustomfields>
  <scriptdeployments>
    <scriptdeployment scriptid="customdeploy_p2p_ai_integration">
      <status>RELEASED</status>
      <title>P2P AI Integration</title>
    </scriptdeployment>
  </scriptdeployments>
</restlet>
